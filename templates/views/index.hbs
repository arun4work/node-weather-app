<!DOCTYPE html>
<html>

    <head>
        <title>Weather</title>
        <meta charset="UTF-8">
        <link rel="icon" href="./img/fav-icon.png">
        <link rel="stylesheet" href="./css/style.css" />
    </head>

    <body>
        <div class="main-content">
            {{>header}}
            <form>
                <input type="text" placeholder="Location" />
                <Button>Search</Button>
            </form>
            <p id="error-msg"></p>
            <div id='weather-content'>
                <div id="location"></div>
                <div>
                    <span class="col-3" id="weather-desc"></span>
                    <span class="col-3" id="current-temp"></span>
                    <span class="col-3">
                        <span id="current-wind-speed"></span>
                        <span id="current-precip"></span>
                        <span id="current-pressure"></span>
                    </span>
                </div>
            </div>
        </div>

        {{>footer}}

        <script src="./js/app.js"></script>
    </body>

</html>